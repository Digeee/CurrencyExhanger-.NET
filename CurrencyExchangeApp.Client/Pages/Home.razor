@page "/"
@rendermode InteractiveWebAssembly

<PageTitle>Global Finance Pro - Home</PageTitle>

<div class="home-page">
    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section">
            <h1>Welcome to Global Finance Pro</h1>
            <p class="lead">
                Your trusted partner for real-time currency exchange rates, financial insights, 
                and portfolio management tools.
            </p>
            <div class="mt-4">
                <a href="/converter" class="btn btn-primary btn-lg me-3">
                    <i class="bi bi-currency-exchange me-2"></i>
                    Currency Converter
                </a>
                <a href="/market" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-graph-up me-2"></i>
                    Market Overview
                </a>
            </div>
        </div>

        <!-- Features Section -->
        <div class="row mt-5">
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-currency-exchange"></i>
                    </div>
                    <h3>Real-time Exchange Rates</h3>
                    <p>
                        Access live currency exchange rates from over 160 countries with up-to-the-minute accuracy.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h3>Market Analytics</h3>
                    <p>
                        Comprehensive market analysis tools with interactive charts and historical data visualization.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3>Secure & Reliable</h3>
                    <p>
                        Bank-level security with end-to-end encryption and 99.9% uptime guarantee.
                    </p>
                </div>
            </div>
        </div>

        <!-- Additional Features -->
        <div class="row mt-4">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="bi bi-wallet me-2 text-primary"></i>
                            Portfolio Management
                        </h4>
                        <p class="card-text">
                            Track your currency investments with our intuitive portfolio management tools. 
                            Monitor performance, set alerts, and make informed decisions.
                        </p>
                        <a href="/portfolio" class="btn btn-outline-primary">Manage Portfolio</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="bi bi-newspaper me-2 text-primary"></i>
                            Financial News
                        </h4>
                        <p class="card-text">
                            Stay informed with the latest financial news, market analysis, and economic insights 
                            from trusted sources around the world.
                        </p>
                        <a href="/news" class="btn btn-outline-primary">Read News</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>