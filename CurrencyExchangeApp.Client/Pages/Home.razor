<style>
    .home-page {
        padding: 2rem 1rem;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .hero-section {
        background: var(--neumorphism-bg);
        border-radius: var(--border-radius-lg);
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 
            16px 16px 32px var(--neumorphism-dark-shadow),
            -16px -16px 32px var(--neumorphism-light-shadow);
        border: 1px solid rgba(255, 255, 255, 0.05);
        animation: float 6s ease-in-out infinite;
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(67, 97, 238, 0.1) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.5s ease;
    }
    
    .hero-section:hover::before {
        opacity: 1;
    }
    
    .hero-section h1 {
        font-weight: 800;
        background: linear-gradient(90deg, #4cc9f0, #4361ee, #3a0ca3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
        font-size: 3rem;
        text-shadow: 0 2px 10px rgba(76, 201, 240, 0.2);
    }
    
    .hero-section .lead {
        font-size: 1.25rem;
        color: var(--gray-text);
        margin-bottom: 2.5rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .cta-buttons .btn {
        margin: 0 0.75rem;
        padding: 0.85rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: var(--border-radius-sm);
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 
            8px 8px 16px var(--neumorphism-dark-shadow),
            -8px -8px 16px var(--neumorphism-light-shadow);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border: none;
        color: white;
    }
    
    .btn-primary:hover {
        transform: translateY(-4px);
        box-shadow: 
            12px 12px 24px var(--neumorphism-dark-shadow),
            -12px -12px 24px var(--neumorphism-light-shadow),
            0 0 20px rgba(67, 97, 238, 0.4);
    }
    
    .btn-outline-light {
        background: transparent;
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: var(--light-text);
    }
    
    .btn-outline-light:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--accent-color);
        transform: translateY(-4px);
        box-shadow: 
            8px 8px 16px var(--neumorphism-dark-shadow),
            -8px -8px 16px var(--neumorphism-light-shadow),
            0 0 15px rgba(76, 201, 240, 0.3);
    }
    
    .feature-card {
        background: var(--neumorphism-bg);
        border-radius: var(--border-radius-md);
        padding: 2rem;
        height: 100%;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 
            10px 10px 20px var(--neumorphism-dark-shadow),
            -10px -10px 20px var(--neumorphism-light-shadow);
        border: 1px solid rgba(255, 255, 255, 0.05);
        text-align: center;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 
            15px 15px 30px var(--neumorphism-dark-shadow),
            -15px -15px 30px var(--neumorphism-light-shadow),
            0 0 30px rgba(76, 201, 240, 0.2);
    }
    
    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, var(--accent-color), #38bdf8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .feature-card h3 {
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }
    
    .feature-card p {
        color: var(--gray-text);
        font-size: 1.1rem;
        line-height: 1.6;
    }
    
    @@media (max-width: 768px) {
        .hero-section {
            padding: 2rem 1.5rem;
        }
        
        .hero-section h1 {
            font-size: 2.2rem;
        }
        
        .hero-section .lead {
            font-size: 1.1rem;
        }
        
        .cta-buttons .btn {
            display: block;
            width: 80%;
            margin: 0.75rem auto;
            padding: 0.75rem 1.5rem;
        }
        
        .feature-card {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
    }
</style>